---
 

interface Props {

    title: string;
    description: string;
}




const { title, description} = Astro.props;


---

<div class="w-[390px] bg-[#0D0D0D] rounded-xl p-4 sm:p-6">
    <div class="bg-[#1B1B1B]  w-6 h-6 sm:h-10 sm:w-10 rounded-full flex items-center justify-center text-white text-xs">
        <slot/>
    </div>
    <div class="mt-8">
        <h3 class="text-gray-100 font-medium text-base">{title}</h3>
        <p class="mt-2 text-zinc-500 font-medium">{description}</p>
    
    </div>

</div>