---
interface Props {
    title: string;
    button: string;
    href: string;
}

const { href, title, button } = Astro.props;
---


<div class="relative mx-12 shadow-black/5 shadow-none  rounded-3xl w-auto xl:w-[1200px] h-80 border border-white/10">
    <div class="absolute inset-0 flex flex-col  p-10 md:p-20 text-white z-[1]">
        <p class="text-2xl md:text-4xl font-semibold max-w-lg">{title}</p>

        <button class="mt-6 md:mt-16 w-48 text-sm backdrop-blur-xl bg-white/20 border border-white/30 rounded-full flex items-center justify-center py-1.5 text-gray-200 font-semibold hover:bg-white/40 duration-200 transitions-all">
            {button}
        </button>
    </div>
    <img
        src="https://cdn.discordapp.com/attachments/1110029912129146931/1156632243159179344/14.webp?ex=6515ad37&is=65145bb7&hm=f3fefa28d37820826816d7a998b8c5690393c00b69ae3d7acad6fcde89b2e9d2&"
        class="relative  duration-200 transitions-all z-[0] opacity-0 shadow-black/5 w-[1200px] h-80 data-[loaded=true]:opacity-100 shadow-none  rounded-2xl"
        data-loaded="true"
        alt="Img"
    />
    <img
        src="https://cdn.discordapp.com/attachments/1110029912129146931/1156632243159179344/14.webp?ex=6515ad37&is=65145bb7&hm=f3fefa28d37820826816d7a998b8c5690393c00b69ae3d7acad6fcde89b2e9d2&"
        class="absolute   z-[-1] inset-0 w-full h-full object-cover filter blur-2xl scale-105 saturate-150 opacity-30 translate-y-1 rounded-2xl"
        aria-hidden="true"
        data-loaded="true"
        alt="Img"
    />
</div>

